        <section class="content-header">
          <h1>
            {{ lang.users_panel }}
            <small>{{ lang.users_panel_info }}</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="{{ host }}/admin/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="{{ host }}/admin/users/">{{ lang.gest_users }}</a></li>
            <li class="active">{{ lang.gest_admin }}</li>
          </ol>
        </section>
		<!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">
              <div class="box box-primary">
                <div class="box-header">
                  <h3 class="box-title">{{ lang.gest_admin }}</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
				 <a id="add_new" href="javascript:void(0);" class="btn btn-flat btn-primary">{{ lang.add_new }}</a><br><br>
				 <input name="CSRFName" id="CSRFName" type="hidden" value="{$CSRFName}">
				 <input name="CSRFToken" id="CSRFToken" type="hidden" value="{$CSRFToken}">
                  <table id="list_admins" class="table table-bordered table-striped">
                    <thead>
                      <tr>
						<th></th>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Email</th>
                        <th>{$l_role}</th>
						<th>Domain</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
					  {for $i=0 to $admtot}
					  <tr>
						<td><input type="hidden" value={$admins[{$i}].id}"><input type="hidden" value="{$admins[{$i}].token}"></td>
						<td>{$admins[{$i}].user}</td>
                        <td>*****</td>
                        <td>{$admins[{$i}].email}</td>
                        <td>{if $admins[$i].privilegi eq '1'}Admin{elseif $admins[$i].privilegi eq '2'}Operatore{else}{$admins[{$i}].privilegi}{/if}</td>
						<td>{$admins[{$i}].domain}</td>
                        <td>{$admins[{$i}].edit}&nbsp;&nbsp;{$admins[{$i}].delete}</td>
					  </tr>
					  {/for}
                    </tbody>
                    <tfoot>
                      <tr>
						<th></th>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Email</th>
                        <th>{$l_role}</th>
						<th>Domain</th>
                        <th></th>
                      </tr>
                    </tfoot>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->